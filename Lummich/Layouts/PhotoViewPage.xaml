<phone:PhoneApplicationPage
    x:Class="Lummich.Layouts.PhotoViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True">
    
    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="Root" Background="Black"
    ManipulationDelta="Zoom_ManipulationDelta"
    ManipulationCompleted="Zoom_ManipulationCompleted">

    <!-- TOP BAR -->
        <StackPanel x:Name="TopBar"
                    VerticalAlignment="Top"
                    Background="#66000000">
            <TextBlock x:Name="DateText"
                        Padding="12,24,12,12"
                       FontSize="28"
                       Foreground="White"/>
        </StackPanel>

        <!-- ZOOM VIEWER -->
        <Grid x:Name="ZoomRoot"
    >

            <Image x:Name="FullImage"
           Stretch="Uniform"
           Tap="FullImage_Tap"
           DoubleTap="FullImage_DoubleTap">
                <Image.RenderTransform>
                    <CompositeTransform x:Name="ImageTransform"/>
                </Image.RenderTransform>
            </Image>
        </Grid>



        <!-- BOTTOM BAR -->
        <Grid x:Name="BottomBar"
      VerticalAlignment="Bottom"
      Background="#66000000" Width="400">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 1) Upload -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <Button Style="{StaticResource RoundIconButton}" IsEnabled="False">
                    <Image Source="/Assets/trash.ico" Width="40" Height="40" Opacity="0.4"/>
                </Button>
                <TextBlock Text="Smazat"
                   x:Name="DeleteButtonText"
                   Foreground="White"
                   FontSize="18"
                   HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <Button x:Name="UploadButton" Style="{StaticResource RoundIconButton}" Click="UploadButton_Click">
                    <Image x:Name="UploadButtonImage" Source="/Assets/network.ico" Width="40" Height="40"/>
                </Button>
                <TextBlock Text="Nahrát"
                   x:Name="UploadButtonText"
                   Foreground="White"
                   FontSize="18"
                   HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <Button Style="{StaticResource RoundIconButton}">
                    <Image Source="/Assets/info.ico" Width="40" Height="40" Opacity="0.15"/>
                </Button>
                <TextBlock Text="Info"
                   x:Name="InfoButtonText"
                   Foreground="White"
                   FontSize="18"
                   HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                <Button Style="{StaticResource RoundIconButton}">
                    <Image Source="/Assets/star.ico" Width="40" Height="40" Opacity="0.15"/>
                </Button>
                <TextBlock Text="Oblíbené"
                   x:Name="FavoriteButtonText"
                   Foreground="White"
                   FontSize="18"
                   HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                <Button Style="{StaticResource RoundIconButton}">
                    <Image Source="/Assets/Human.png" Width="40" Height="40" Opacity="0.15"/>
                </Button>
                <TextBlock Text="Sdílet"
                   x:Name="ShareButtonText"
                   Foreground="White"
                   FontSize="18"
                   HorizontalAlignment="Center"/>
            </StackPanel>

        </Grid>
        <TextBlock x:Name="UploadProgressText" Visibility="Collapsed" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="12,0,0,100">65% 15.1KiB / 9.25MiB</TextBlock>
        <ProgressBar x:Name="UploadProgressBar" Visibility="Collapsed" HorizontalAlignment="Stretch" Value="69" Height="10" VerticalAlignment="Bottom" Margin="0,0,0,90"/>

    </Grid>
    

</phone:PhoneApplicationPage>
    
    